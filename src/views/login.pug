doctype html
html(lang='en')
  head
  body
    div(style="width:300px;")
      h1 Chat Login
      |
      form(action='/login', method='POST')
        div(style="margin-bottom:10px;")
          label(for='email' style="display:block;") Email
          |
          input#email(type='text', name='email', placeholder='Enter email...', required='')
        |
        div(style="margin-bottom:10px;")
          label(for='password' style="display:block;") Password
          |
          input#password(type='password', name='password', placeholder='Enter password...', required='')
        |
        div(style="color:red;margin-bottom:10px;") #{message}
        |
        button(type='submit' style="margin-bottom:10px;") login
        |
        a(href='/register' style="display:block;") Not a member? Sign Up