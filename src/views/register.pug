doctype html
html(lang='en')
    head
    body
        div(style="width:300px")
            h1 Chat Register
            |
            form(action='/register' method='POST')
                div(style="margin-bottom:10px")
                    label(for='firstname' style="display:block") First name
                    |
                    input#firstname(type='text' name='firstname' placeholder='Enter first name...' required='')
                |
                div(style="margin-bottom:10px")
                    label(for='lastname' style="display:block") Last name
                    |
                    input#lastname(type='text' name='lastname' placeholder='Enter last name...' required='')
                |
                div(style="margin-bottom:10px")
                    label(for='email' style="display:block") Email
                    |
                    input#email(type='emial' name='email' placeholder='Enter email...' required='')
                |
                div(style="margin-bottom:10px")
                    label(for='password' style="display:block") Password
                    |
                    input#password(type='password' name='password' placeholder='Enter password...' required='')
                div(style="margin-bottom:10px")
                    label(for='password_repeat' style="display:block") Password Repeat
                    |
                    input#password-repeat(type='password' name='password_repeat' placeholder='Enter password again...' required='')
                |
                div(style="margin-bottom:10px")
                    label(for='lang' style="display:block") Language
                    |
                    input#lang(type='text' name='lang' placeholder='Enter language...')
                |
                div(style="margin-bottom:10px")
                    label(for='country' style="display:block") Country
                    |
                    input#country(type='text' name='country' placeholder='Enter country...')
                |
                div(style="color:red; margin-bottom:10px;") #{message}
                |
                button(type='submit') register
                |
                a(href="/login" style="margin-left:20px") login